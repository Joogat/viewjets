<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TextViewWithDrawables">
        <attr name="drawableLeftCompat" format="reference"/>
        <attr name="drawableRightCompat" format="reference"/>
        <attr name="drawableTopCompat" format="reference"/>
        <attr name="drawableBottomCompat" format="reference"/>
        <attr name="drawableColor" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="SelectableTextViewWithDrawables">
        <attr name="drawableColorSelected" format="color|reference"/>
        <attr name="textColorSelected" format="color|reference"/>
        <attr name="backgroundColorSelected" format="color|reference"/>
    </declare-styleable>

</resources>